<h1> You have {{todos.length}} Todos </h1>
<ul>
  {{#each todos}}
    <li>Description: {{description}}</li>
    <li>Urgent: {{urgent}}</li>
    <button><a href="/todos/{{@index}}/edit">Edit</a></button>
    <form action="/todos/{{@index}}?_method=DELETE" method='POST'>
    <input type="submit" value="DELETE"/>
    </form>
    <br>
  {{/each}}
</ul>
